<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container mb-5">
  <div class="row d-flex flex-column align-items-center">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="material-icons md-18">category</i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="material-icons md-18">location_on</i>
          地址：
        </span>
        {{restaurant.location}}
        <a href={{restaurant.google_map}} class="text-secondary" target="_blank">
          <i class="material-icons md-18">directions</i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="material-icons md-18">phone</i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">

    </div>

    <div>
      <a href="/" class="btn btn-primary">Back</a>
      <a href="/restaurants/{{{restaurant._id}}}/edit" class="btn btn-secondary">Edit</a>
      <form action="/restaurants/{{{this._id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>
